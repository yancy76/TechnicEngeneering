<Window x:Class="AutoEngeneering.Views.Windows.Editors.TechnicTypesEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoEngeneering.Views.Windows.Editors"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
       Title="Редактор" Height="150" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Редактор детали" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Grid.ColumnSpan="2"/>

        <TextBlock Text="Название" Grid.Row="1" FontSize="20" />
        <TextBox x:Name="TitleBox" Grid.Row="1" Grid.Column="1" />

        <Button x:Name="saveButton" Content="Сохранить" Grid.Row="5" Grid.ColumnSpan="2" Click="saveButton_Click"/>
    </Grid>
</Window>
